{% extends 'FOSMessageBundle::layout.html.twig' %}

{% block fos_message_content %}

<div class="card card-primary card-outline">
  <div class="card-header">
    <h3 class="card-title">Nouveau message</h3>
  </div>
  {{ form_start(form) }}
  <!-- /.card-header -->
  <div class="card-body">
    <div class="form-group row">
      <label for="title" class="col-sm-2 col-form-label">{{ form_label(form.recipient) }}</label>
      <div class="col-sm-10">
        {{ form_widget(form.recipient, { 'attr': {'class': 'form-control select2'} }) }}
        <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.recipient) }}</div>
      </div>
    </div>

    <div class="form-group row">
      <label for="title" class="col-sm-2 col-form-label">{{ form_label(form.subject) }}</label>
      <div class="col-sm-10">
        {{ form_widget(form.subject) }}
        <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.subject) }}</div>
      </div>
    </div>


    <div class="form-group row">
      <label for="title" class="col-sm-2 col-form-label">{{ form_label(form.body) }}</label>
      <div class="col-sm-10">
        {{ form_widget(form.body) }}
        <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.body) }}</div>
      </div>
    </div>

  </div>
  <!-- /.card-body -->
  <div class="card-footer">
    <div class="float-right">
      <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Envoyer</button>
    </div>
    <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Annuler</button>
  </div>
  {{ form_end(form) }}
  <!-- /.card-footer -->
</div>
<!-- /.card -->

{% endblock %}


{% block javascripts_surcharge %}
<script>
$(function () {
  //Initialize Select2 Elements
  $('.select2').select2()

  //Initialize Select2 Elements
  $('.select2bs4').select2({
    theme: 'bootstrap4'
  })
})
</script>
{% endblock %}
