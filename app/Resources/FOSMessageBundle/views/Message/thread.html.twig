{% extends 'FOSMessageBundle::layout.html.twig' %}

{% block fos_message_content %}

<div class="card card-widget">
  <div class="card-header">
    <div class="user-block">
      <img class="img-circle" src="{{ asset('/img/avatar.png') }}" alt="User Image">
      <span class="username"><a href="#">{{ thread.subject }}</a></span>
    </div>
  </div>
  <!-- /.card-body -->
  <div class="card-footer card-comments">
    {% for message in thread.messages %}
      <div class="card-comment" id="message_{{ message.id }}">
        <!-- User image -->
        <img class="img-circle img-sm" src="{{ asset('/img/avatar.png') }}" alt="User Image">

        <div class="comment-text">
          <span class="username">
            {{message.sender}}
            <span class="text-muted float-right">{{message.createdAt|date}}</span>
          </span><!-- /.username -->
          {{ message.body }}
        </div>
        <!-- /.comment-text -->
      </div>
    {% endfor %}
  </div>
  <!-- /.card-footer -->
  <div class="card-footer">
    {{ form_start(form) }}
      <img class="img-fluid img-circle img-sm" src="{{ asset('/img/avatar.png') }}" alt="Alt Text">
      <!-- .img-push is used to add margin to elements next to floating images -->
      <div class="img-push">
        <div class="input-group">
          {{ form_widget(form.body , { 'attr': {'class': 'form-control form-control-sm' , 'placeholder': 'RÃ©pondre'} }) }}
          <span class="input-group-append">
            <input type="submit" class="btn btn-primary" value="Envoyer" />
          </span>
        </div>
      </div>
    {{ form_end(form) }}
  </div>
  <!-- /.card-footer -->
</div>

{% endblock %}
