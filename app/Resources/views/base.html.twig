{% extends '@SbSAdminLTE/Layout/base.html.twig' %}

  {% block corestyles %}
      {{ parent() }}
  {% endblock %}

  {% block corejs %}
      {{ parent() }}
  {% endblock %}

  {% block fonts %}
      {{ parent() }}
  {% endblock %}

  {% block admin_lte_navbar %}
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
          <ul class="navbar-nav">
              <li class="nav-item">
                  {{ sidebar_toggle_button() }}
              </li>
          </ul>
          {% if app.user is not null and is_granted('IS_AUTHENTICATED_REMEMBERED') %}
              {# Top navbar links #}
              {{ navbar_menu(app.request) }}
              {# Right navbar links #}
              <ul class="navbar-nav ml-auto">
                  {# Notifications Dropdown Menu #}
                  {{ navbar_notifications() }}
                  {# Tasks Dropdown Menu #}
                  {{ navbar_tasks() }}
                  {# User Dropdown Menu #}
                  {{ navbar_user_account() }}
              </ul>
          {% endif %}
      </nav>
  {% endblock %}

  {% block admin_lte_logo %}
      <a href="{{ path('homepage') }}" class="brand-link">
          <img src="{{ asset('bundles/sbsadminlte/img/AdminLTELogo.png') }}"
               alt="AdminLTE Logo"
               class="brand-image img-circle elevation-3"
               style="opacity: .8">
          <span class="brand-text font-weight-light">AdminLTE 3</span>
      </a>
  {% endblock %}
  {# Sidebar #}
  {% block admin_lte_sidebar %}
      {% if app.user is not null and is_granted('IS_AUTHENTICATED_REMEMBERED') %}
          <div class="sidebar">
              <nav class="mt-2">
                  {{ sidebar_menu(app.request) }}
              </nav>
          </div>
      {% endif %}
  {% endblock %}

   {% block admin_lte_footer %}
       <footer class="main-footer">
           <div class="float-right d-none d-sm-block"><b>Version</b> 3.0.x</div>
           <strong>Copyright &copy; 2014-{{ "now"|date("Y") }} <a href="http://adminlte.io">AdminLTE.io</a>.</strong>
           All rights reserved.
       </footer>
   {% endblock %}
