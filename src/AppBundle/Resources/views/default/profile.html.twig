{% extends '@App/base.html.twig' %}

{% block page_header %}

    {% import "@SbSAdminLTE/Layout/main_macros.html.twig" as macros %}
    {{ macros.page_header("", "Profile") }}
{% endblock %}

{% block page_content %}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">

      <!-- Profile Image -->
      <div class="card card-primary card-outline">
        <div class="card-body box-profile">
          <div class="text-center">
            <img src='{{ asset('img/avatar5.png') }}' class="profile-user-img img-fluid img-circle">
          </div>

          <h3 class="profile-username text-center">{{user.username}}</h3>
          <p class="text-muted text-center">{{user.code}}</p>
          <p class="text-muted text-center">{{user.email}}</p>

          <ul class="list-group list-group-unbordered mb-3">
            <li class="list-group-item">
              <b>Creé le</b> <a class="float-right">{{user.lastLogin|date("m/d/Y")}}</a>
            </li>
            <li class="list-group-item">
              <b>Modifié le</b> <a class="float-right">{{user.updated|date("m/d/Y")}}</a>
            </li>
            <li class="list-group-item">
              <b>dern cnx</b> <a class="float-right">{{user.updated|date("m/d/Y")}}</a>
            </li>
          </ul>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </div>
    <!-- /.col -->
    <div class="col-md-9">
      <div class="card">
        <div class="card-header p-2">
          <strong>Modifier mon profile</strong>
        </div><!-- /.card-header -->
        <div class="card-body">
          <div class="tab-content">
            {{ form_start(form) }}
                <div class="form-group row">
                  <label for="username" class="col-sm-3 col-form-label">{{ form_label(form.firstName) }}</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.firstName) }}
                    <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.firstName) }}</div>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="username" class="col-sm-3 col-form-label">{{ form_label(form.lastName) }}</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.lastName) }}
                    <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.lastName) }}</div>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="username" class="col-sm-3 col-form-label">{{ form_label(form.username) }}</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.username) }}
                    <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.username) }}</div>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="username" class="col-sm-3 col-form-label">{{ form_label(form.phone) }}</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.phone) }}
                    <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.phone) }}</div>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="username" class="col-sm-3 col-form-label">{{ form_label(form.cin) }}</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.cin) }}
                    <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.cin) }}</div>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="email" class="col-sm-3 col-form-label">{{ form_label(form.email) }}</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.email) }}
                    <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.email) }}</div>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="email" class="col-sm-3 col-form-label">{{ form_label(form.plainPassword.first) }}</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.plainPassword.first) }}
                    <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.plainPassword.first) }}</div>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="email" class="col-sm-3 col-form-label">{{ form_label(form.plainPassword.second) }}</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.plainPassword.second) }}
                    <div class="help-block with-errors" style="font-weight:bold;color:#ff0000;">{{ form_errors(form.plainPassword.second) }}</div>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="offset-sm-10 col-sm-2">
                    <button type="submit" class="btn btn-danger">Enregistrer</button>
                  </div>
                </div>
            {{ form_end(form) }}

          </div>
          <!-- /.tab-content -->
        </div><!-- /.card-body -->
      </div>
      <!-- /.nav-tabs-custom -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</div><!-- /.container-fluid -->
{% endblock %}
