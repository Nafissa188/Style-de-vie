<div class="container-xxl py-6">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow zoomIn" data-wow-delay="0.1s">
                <img class="img-fluid" src="{{ asset('front/img/about.png') }}">
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                {% if sub_title is defined  %}
                    <div class="d-inline-block border rounded-pill text-primary px-4 mb-3">{{sub_title}}</div>
                {% endif %}

                {% if title is defined  %}
                    <h2 class="mb-4">{{title}}</h2>
                {% endif %}

                {% if description is defined  %}
                    <p class="mb-4">{{description}}</p>
                {% endif %}

                {% if cards is defined  %}
                    <div class="row g-3 mb-4">
                        {% for card in cards %}
                            {% include 'AppBundle:front:partials/cards/card-about.html.twig' with card %}
                        {% endfor %}                   
                    </div>
                {% endif %}
                
                {% if btn is defined  %}
                    {% include 'AppBundle:front:partials/btn.html.twig' with btn %}
                {% endif %}
            </div>
        </div>
    </div>
</div>