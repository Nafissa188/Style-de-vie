<div class="container-xxl py-6">
    <div class="container">
        <div class="mx-auto text-center wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            {% if sub_title is defined  %}
                <div class="d-inline-block border rounded-pill text-primary px-4 mb-3">{{sub_title}}</div>
            {% endif %}
            {% if title is defined  %}
                <h2 class="mb-5">{{title}}</h2>
            {% endif %}
        </div>
        {% if cards is defined  %}
            <div class="row g-4">
                {% for card in cards %}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        {% include 'AppBundle:front:partials/cards/card-service.html.twig' with card %}
                    </div>
                {% endfor %}                   
            </div>
        {% endif %}
    </div>
</div>