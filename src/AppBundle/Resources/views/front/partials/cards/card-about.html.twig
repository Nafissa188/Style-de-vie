<div class="col-12 d-flex">
    <div class="flex-shrink-0 btn-lg-square rounded-circle bg-primary">
        {% if icon is defined %}
            <i class="fa {{icon}} text-white"></i>
        {% endif %}
    </div>
    <div class="ms-4">
        {% if  title is defined %}
            <h6>{{title}}</h6>
        {% endif %}
        {% if description is defined %}
            <span>{{description}}</span>
        {% endif %}
    </div>
</div>