{% extends '@App/base.html.twig' %}

{% import "@SbSAdminLTE/Layout/main_macros.html.twig" as macros %}

{% block page_header %}
    {{ macros.page_header("Dépôt de stockage", "Liste") }}
{% endblock %}

{% block page_content %}

    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 style="float:left" class="card-title">Liste des Dépôts de stockage</h3>
              <a style="float:right" href="{{ path('storage_depot_new') }}" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Ajouter un Dépôt</a>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Nom</th>
                  <th>Téléphone</th>
                  <th>Adresse</th>
                  <th class="text-right">Actions</th>
                </tr>
                </thead>
                <tbody>
                  {% for storage_depot in storage_depots %}
                  <tr>
                    <td>{{ storage_depot.depotName }}</td>
                    <td>{{ storage_depot.phone }}</td>
                    <td>{{ storage_depot.address }}</td>
                    <td class="text-right">
                        <a class="btn btn-success " href="{{ path('storage_depot_edit', { 'id': storage_depot.id }) }}"><i style="color:#fff" class="fa fa-pen"></i></a>
                        <a data-toggle="modal" data-target="#delete{{ storage_depot.id }}" class="btn btn-danger" ><i style="color:#fff" class="fa fa-trash"></i></a>
                        <div class="modal fade" id="delete{{ storage_depot.id }}" style="display: none;" aria-hidden="true">
                          <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h4 class="modal-title">Attention</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">×</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                <p style="text-align:center">Est ce que vous etes sur de supprimer {{ storage_depot.depotName }} </p>
                              </div>
                              <div class="modal-footer justify-content-between">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                <a href="{{ path('storage_depot_delete', { 'id': storage_depot.id }) }}" class="btn btn-danger">Supprimer</a>
                              </div>
                            </div>
                            <!-- /.modal-content -->
                          </div>
                          <!-- /.modal-dialog -->
                        </div>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                  <th>Nom</th>
                  <th>Téléphone</th>
                  <th>Adresse</th>
                  <th>Actions</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
{% endblock %}
